def heap_sort(arr):
    n = len(arr)
    build_max_heap(arr)

    for i in range(n - 1, 0, -1):
        arr[0], arr[i] = arr[i], arr[0]  # Move max to end
        heapify(arr, i, 0)  # Re-heapify the reduced heap
    return arr

arr = [20, 10, 15, 30, 40]
sorted_arr = heap_sort(arr.copy())
print("Sorted using heap sort:", sorted_arr)
